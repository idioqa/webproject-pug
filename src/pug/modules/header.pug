header.header
  .container
    .header__navs
      nav.header__nav.header-nav
        ul.header-nav__list.js-header-nav-click
          li.header-nav__item
            a(href="index.html").header-nav__link.header-nav__link--active Home
          li.header-nav__item
            a(href="attr.html").header-nav__link Attributes
          li.header-nav__item
            a(href="case.html").header-nav__link Case 
          li.header-nav__item
            a(href="conditionals.html").header-nav__link Conditionals
          li.header-nav__item
            a(href="includes.html").header-nav__link Includes
      nav.header__nav.header__nav--right.header-nav
        ul.header-nav__list
          li.header-nav__item
            button.header-nav__link.header-nav__link--color-blk.js-sign_up Sign Up
      .modal__background.js-modal-bckg
        .header__modal.modal.js-modal
          form.modal__form(action="form.php" method="POST")
            label.modal__item Login:
              input(type="text" name="login" pattern="[a-z0-9. -]+" placeholder="Enter your login" maxlength="15" title="Login must be less then 15 symbols")
            label.modal__item Password:
              input(type="password" name="password" pattern="[A-Za-z0-9]{8,16}" placeholder="Enter your password" title="Use only alphanumerical symbols, 8-16 symbols" maxlength="16")
            label.modal__item Name:
              input(type="text" name="name" pattern="[a-z0-9. -]+" maxlength="100" placeholder="Name" )
            label.modal__item Surname:
              input(type="text" name="surname" pattern="[a-z0-9. -]+" maxlength="100" placeholder="Surname")
            label.modal__item Email:
              input(type="email" name="email" placeholder="your@email.com" maxlength="100" title="Your email should be valid")
            label.modal__item City:
              input(type="text" name="city" pattern="[a-z0-9. -]+" maxlength="20" placeholder="City")
            label.modal__item Address:
              input(type="text" name="address" pattern="[a-z0-9. -]+" maxlength="20" placeholder="Address")
            label.modal__item Date of birth:
              input(type="date" name="date")
            label.modal__item I agree to terms
              input(type="checkbox" name="agree")
            button(type="submit").modal__btn Sign Up
            button(type="reset").modal__btn Reset
