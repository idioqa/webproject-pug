include ../mixins
block variables

doctype html
html(lang="ru-RU")
    head
        meta(charset="utf-8")
        title #{title}
        meta(http-equiv="X-UA-Compatible", content="IE = edge")
        meta(name="viewport" content="width=device-width,initial-scale=1")
        meta(name="description" content="Develop web-sites easier with PUG - robust, elegant, feature rich template engine for Node.js ")
        meta(name="keywords" content="pug, jade, node, javascript, web-development, html, template engine")

        link(href="https://fonts.googleapis.com/css?family=Arvo" rel="stylesheet")
        link(rel="stylesheet" type="text/css" href="static/css/normalize.css")
        link(rel="stylesheet" type="text/css" href="static/css/main.css")

    body
        include ../modules/header
        block content
        include ../modules/footer
    
    script(src="static/js/main.js")